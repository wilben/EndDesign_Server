<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Login</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.gem.hsx.servlet.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.gem.hsx.servlet.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Check</servlet-name>
		<servlet-class>com.gem.hsx.servlet.Check</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ImgReceive</servlet-name>
		<servlet-class>com.gem.hsx.servlet.ImgReceive</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Avatar</servlet-name>
		<servlet-class>com.gem.hsx.servlet.Avatar</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Info</servlet-name>
		<servlet-class>com.gem.hsx.servlet.Info</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ChangePwd</servlet-name>
		<servlet-class>com.gem.hsx.servlet.ChangePwd</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SaveInfo</servlet-name>
		<servlet-class>com.gem.hsx.servlet.SaveInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FileInOutputStream</servlet-name>
		<servlet-class>com.gem.hsx.servlet.FileInOutputStream</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>DesignerDetail</servlet-name>
		<servlet-class>com.gem.hsx.servlet.DesignerDetail</servlet-class>
	</servlet>

  <servlet>
    <display-name>HeaderNewsJsonServlet</display-name>
    <servlet-name>HeaderNewsJsonServlet</servlet-name>
    <servlet-class>com.gem.hsx.servlet.HeaderNewsJsonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DesignerDetail</servlet-name>
    <url-pattern>/DesignerDetail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HeaderNewsJsonServlet</servlet-name>
    <url-pattern>/HeaderNewsJsonServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>DesignerJsonServlet</display-name>
    <servlet-name>DesignerJsonServlet</servlet-name>
    <servlet-class>com.gem.hsx.servlet.DesignerJsonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DesignerJsonServlet</servlet-name>
    <url-pattern>/DesignerJsonServlet</url-pattern>
  </servlet-mapping>


	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Check</servlet-name>
		<url-pattern>/Check</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ImgReceive</servlet-name>
		<url-pattern>/ImgReceive</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Avatar</servlet-name>
		<url-pattern>/Avatar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Info</servlet-name>
		<url-pattern>/Info</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangePwd</servlet-name>
		<url-pattern>/ChangePwd</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SaveInfo</servlet-name>
		<url-pattern>/SaveInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FileInOutputStream</servlet-name>
		<url-pattern>/FileInOutputStream</url-pattern>
	</servlet-mapping>

</web-app>